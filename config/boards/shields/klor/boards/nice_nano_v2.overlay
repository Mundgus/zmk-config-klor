#include <dt-bindings/led/led.h>

/ {
    leds: leds {
        compatible = "ws2812";
        gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;  // P0.06, akt√≠v magas jel
        chain-length = <21>;
        label = "WS2812";
        status = "okay";
        color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
    };

    chosen {
        zmk,underglow = <&leds>;
    };
};
